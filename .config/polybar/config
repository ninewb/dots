  font-1 = "Font Awesome 5 Free:size=13:weight=bold;4"

[bar/top]
  inherit = bar/base
  bottom = false
  offset-x = 10%
  modules-left = wifi backlight
  modules-center = i3
  modules-right = battery date 

[bar/bottom]
  inherit = bar/base
  bottom = true
  offset-x = 10%
  modules-left = pacupdate
  modules-center = cpu ram swap
  modules-right = filesystem data

[module/i3]
  type = internal/i3
  format = <label-state> <label-mode>
  index-sort = true
  wrapping-scroll = false
  enable-click = true

